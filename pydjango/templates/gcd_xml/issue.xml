{% load credits %}<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE comicbook SYSTEM "comics.dtd">
<comicbook id="{{ issue.id }}">
<title>{{ cover_story.title }}</title>
<series id="{{ issue.series.id }}">{{ issue.series.name }}</series>
<issue>{{ issue.number }}</issue>
<publisher>{{ issue.series.publisher }}</publisher>
<price>{{ issue.price }}</price>
<pages>{{ cover_story.page_count }}</pages>
<publication_date>{{ issue.publication_date }}</publication_date>
<notes>{{ cover_story.notes }}</notes>
<editors>
    {{ cover_story.editor }}
</editors>
<cover>
    {{ cover_story|show_list_xml:"feature" }}
    {{ cover_story|show_list_xml:"genre" }}
    <credits>
        {{ cover_story|show_credit_xml:"script" }}
        {{ cover_story|show_credit_xml:"pencils" }}
        {{ cover_story|show_credit_xml:"inks" }}
        {{ cover_story|show_credit_xml:"colors" }}
        {{ cover_story|show_credit_xml:"letters" }}
    </credits>
    <reprinted>{{ cover_story.reprints }}</reprinted>
    {{ cover_story|show_characters_xml }}
</cover>
<stories>
    {% for story in stories %}
    <story sequence="{{ story.sequence_number }}" type="{{ story.type}}">
    <title>{{ story.title }}</title>
    {{ story|show_list_xml:"feature" }}
    {{ story|show_list_xml:"genre" }}
    <credits>
        {{ story|show_credit_xml:"script" }}
        {{ story|show_credit_xml:"pencils" }}
        {{ story|show_credit_xml:"inks" }}
        {{ story|show_credit_xml:"colors" }}
        {{ story|show_credit_xml:"letters" }}
    </credits>
    <synopsis>{{ story.synopsis }}</synopsis>
    <reprinted>{{ story.reprints }}</reprinted>
    <notes>{{ story.notes }}</notes>
    {{ story|show_characters_xml }}
    </story>
    {% endfor %}

</stories>
</comicbook>
